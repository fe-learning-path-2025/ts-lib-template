{
    "compilerOptions": {
        "target": "es2022",
        "module": "esnext",
        "moduleResolution": "bundler",
        "lib": ["ES2022"],
        "strict": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "sourceMap": true,
        "outDir": "dist"
    },
    "include": ["src", "tests"]
}
